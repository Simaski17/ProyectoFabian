<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="100dp">

    <ImageView
        android:layout_width="528dp"
        android:layout_height="468dp"
        android:background="@drawable/circuloazul"
        android:layout_marginTop="193dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="93dp">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="93dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="59dp"
                android:layout_marginTop="33dp"
                android:text="[ "
                android:textColor="@color/NarajoEntel"
                android:textSize="31sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="93dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="accEsorios dEstacados_"
                android:layout_marginTop="29dp"
                android:layout_marginLeft="3dp"
                android:textColor="@color/AzulEntel"
                android:textSize="38sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="91dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="550dp"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="480dp"
                android:layout_height="450dp"
                android:layout_marginTop="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">



                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/foto_accesorio"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"/>

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="290dp"
                    android:layout_marginTop="260dp"
                    android:background="@drawable/iconcastnaranjo"/>



                <TextView
                    android:id="@+id/tvNombreEquipo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BeoPlay S3"
                    android:layout_marginLeft="278dp"
                    android:layout_marginTop="122dp"
                    android:textColor="@color/NarajoEntel"
                    android:textSize="30sp" />


                <TextView
                    android:id="@+id/tvModeloEquipo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speaker"
                    android:layout_marginLeft="279dp"
                    android:layout_marginTop="150dp"
                    android:textColor="@color/NarajoEntel"
                    android:textSize="34sp"
                    android:textStyle="italic|bold"/>

            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlAccesoriosDestacados"
                android:layout_width="385dp"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="31dp">

                <LinearLayout
                    android:id="@+id/ly2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/destacamos_este_mes"
                        android:textColor="@color/AzulEntel"
                        android:layout_marginLeft="56dp"
                        android:layout_marginTop="34dp"
                        android:textSize="20sp"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="360dp"
                    android:layout_below="@+id/ly2"
                    android:layout_height="match_parent">+

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </android.support.v7.widget.RecyclerView>


                </RelativeLayout>



            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>
</FrameLayout>
