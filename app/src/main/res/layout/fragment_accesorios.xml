                    android:textStyle="italic|bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ayudalo a encontrar su accesorio"
                    android:textColor="@color/GrisOscuroEntel"
                    android:layout_marginLeft="82dp"
                    android:layout_marginTop="62dp"
                    android:textSize="21sp"
                    android:textStyle="italic" />

                <RelativeLayout
                    android:id="@+id/rlCatalogoAccesorios"
                    android:layout_width="322dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="97dp"
                    android:layout_marginLeft="64dp"
                    android:background="@drawable/square_boton_buscador_planes"
                    android:backgroundTint="@color/AzulEntel"
                    android:elevation="5dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvBuscadorPlanes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Catalogo de Accesorios"
                        android:paddingRight="9dp"
                        android:textColor="@color/BlancoEntel"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </RelativeLayout>



            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>
</FrameLayout>
