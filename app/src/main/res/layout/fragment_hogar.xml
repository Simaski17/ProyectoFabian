<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="100dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="58dp"
                android:layout_marginTop="25dp"
                android:text="[ "
                android:textColor="@color/NarajoEntel"
                android:textSize="30sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:text="Productos hOgar_"
                android:textColor="@color/AzulEntel"
                android:textSize="38sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="101dp"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rlhogar1"
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/ivTelefoniaFija"
                android:layout_width="222dp"
                android:layout_height="59dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/telefonia">
            </ImageView>

            <ImageView
                android:id="@+id/ivTelevision"
                android:layout_width="222dp"
                android:layout_height="59dp"
                android:layout_marginLeft="401dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/television">

            </ImageView>

            <ImageView
                android:id="@+id/ivInternet"
                android:layout_width="222dp"
                android:layout_height="59dp"
                android:layout_marginLeft="642dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/internet">

            </ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="559dp"
                android:layout_height="290dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/sillon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/que_tal_un_pack"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/AzulEntel"
                android:textSize="38sp"
                android:textStyle="italic|bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ayudalo_encontrar_pack"
                android:layout_marginLeft="59dp"
                android:layout_marginTop="65dp"
                android:textColor="@color/GrisOscuroEntel"
                android:textSize="21sp"
                android:textStyle="italic" />

            <RelativeLayout
                android:id="@+id/rlDoblePack"
                android:layout_width="288dp"
                android:layout_height="60dp"
                android:layout_marginTop="98dp"
                android:layout_marginLeft="68dp"
                android:background="@color/AzulEntel"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvDoblePack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/doble_pack"
                    android:textColor="@color/BlancoEntel"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlTriplePack"
                android:layout_width="288dp"
                android:layout_height="60dp"
                android:layout_marginTop="173dp"
                android:layout_marginLeft="68dp"
                android:background="@drawable/square_boton_buscador_planes"
                android:backgroundTint="@color/AzulEntel"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvTriplePack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/triple_pack"
                    android:paddingRight="2dp"
                    android:textColor="@color/BlancoEntel"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>