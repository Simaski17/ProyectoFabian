<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HogarFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[ "
                android:textColor="@color/NarajoEntel"
                android:textSize="50sp"
                android:textStyle="bold|italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Productos hogAr_"
                android:textColor="@color/AzulEntel"
                android:textSize="50sp"
                android:textStyle="bold|italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:background="@drawable/all_corner_circle"
                android:elevation="5dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telefonía fija"
                    android:textStyle="bold"
                    android:textColor="@color/BlancoEntel"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/cast"
                    android:backgroundTint="@color/BlancoEntel" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:background="@drawable/all_corner_circle"
                android:elevation="5dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Televisión HD"
                    android:textStyle="bold"
                    android:textColor="@color/BlancoEntel"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/cast"
                    android:backgroundTint="@color/BlancoEntel" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:background="@drawable/all_corner_circle"
                android:elevation="5dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Internet   "
                    android:textStyle="bold"
                    android:textColor="@color/BlancoEntel"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/cast"
                    android:backgroundTint="@color/BlancoEntel" />

            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Que tal un buen pack?"
                android:textSize="33sp"
                />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
